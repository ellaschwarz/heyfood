        <i class="fas fa-plus"></i>Add restaurant
      </button>
    </ul>

    <!-- ADD NEW RESTAURANT MODAL -->
    <div class="modal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add new restaurant</h5>

            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>

          </div>
          <div class="modal-body">
            <form action="/restaurants" method="POST" id="addrestaurant">
              <div class="form-group">
                <input
                  type="hidden"
                  value="0"
                  class="form-control"
                  id="exampleFormControlInput0"
                  name="idRestaurants"/>
              </div>
              <div class="form-group">
                <label for="exampleFormControlInput1">Restaurant name</label>
                <input
                  type="text"
                  class="form-control"
                  id="exampleFormControlInput1"
                  placeholder="Type a name of a restaurant"
                  name="Name"/>
              </div>
              <div class="form-group">
                <label for="exampleFormControlInput2">Area</label>
                <input
                  type="text"
                  class="form-control"
                  id="exampleFormControlInput1"
                  placeholder="In what area is the restaurant located? E.g. Södermalm, Vasastan or Enskede"
                  name="Area"/>
              </div>
              <div class="form-group">
                <label for="exampleFormControlInput3">Cuisine</label>
                <input
                  type="text"
                  class="form-control"
                  id="exampleFormControlInput1"
                  placeholder="What type of food does the restaurant serve? E.g. Italian, Scandinavian or Indian"
                  name="Cuisine"/>
              </div>

              <div class="form-group">
                <label for="exampleFormControlSelect1">Price range</label>
                <select
                  class="form-control"
                  id="exampleFormControlSelect1"
                  placeholder="Select a price range that suits accordingly to the menu"
                  name="Price">
                  <option>$</option>
                  <option>$$</option>
                  <option>$$$</option>
                  <option>$$$$</option>
                </select>
              </div>
              <button type="submit" class="btn btn-primary">
                Save restaurant
              </button>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- ADD NEW RESTAURANT MODAL END -->

